<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.genre.name %></td>
        <td><%= link_to fa_icon('eye', text: 'Show'), artist %></td>
        <td><%= link_to fa_icon('pencil', text: 'Edit'), edit_artist_path(artist) %></td>
        <td><%= link_to fa_icon('trash-o', text: 'Delete'), artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path, class: 'btn btn-default' %>
